<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/avatar_recyclerview_padding">

    <android.support.v7.widget.CardView
        android:id="@+id/avatar_recyclerview_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/avatar_recyclerview_padding">

            <RelativeLayout
                android:id="@+id/avatar_recyclerview_image_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/avatar_recyclerview_padding">

                <ProgressBar
                    android:id="@+id/avatar_recyclerview_progressBar"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="@dimen/avatar_recyclerview_progressbar"
                    android:layout_height="@dimen/avatar_recyclerview_progressbar"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/avatar_recyclerview_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <TextView
                android:id="@+id/avatar_recyclerview_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/avatar_recyclerview_image_layout" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
