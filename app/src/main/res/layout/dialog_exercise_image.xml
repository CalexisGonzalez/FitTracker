<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dialog_exercise_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/dialog_exercise_progressBar_left"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="@dimen/exercise_dialog_progressbar"
                android:layout_height="@dimen/exercise_dialog_progressbar"
                android:layout_weight="1" />

            <ProgressBar
                android:id="@+id/dialog_exercise_progressBar_right"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="@dimen/exercise_dialog_progressbar"
                android:layout_height="@dimen/exercise_dialog_progressbar"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_exercise_image_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/dialog_exercise_image_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
